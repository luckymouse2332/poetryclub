    "type-check": "svelte-check --tsconfig ./tsconfig.json",
    "clean": "rimraf build .svelte-kit"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@types/node": "^20.10.6"
  },
  "type": "module"
}
