{
  "name": "poetryclub",
  "version": "1.0.0",
  "description": "Poetry Club - Monorepo with NestJS backend and SvelteKit frontend",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "api:dev": "turbo run dev --filter=api",
    "web:dev": "turbo run dev --filter=web",
    "api:build": "turbo run build --filter=api",
    "web:build": "turbo run build --filter=web",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "turbo": "^2.5.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.39.1"
  },
  "keywords": [
    "monorepo",
    "nestjs",
    "sveltekit",
    "turborepo"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "zod": "^4.0.14"
  }
}
